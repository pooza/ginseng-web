<%# encoding: UTF-8 -%>
<!doctype html>
<html lang="ja">
<body>
<% if params[:mode] == 'string' %>
  <%= params[:content] %>
<% elsif params[:mode] == 'array' %>
  <% params[:content].each do |v| %>
    <%= v %><br>
  <% end %>
<% elsif params[:mode] == 'hash' %>
  <% params[:content].each do |k, v| %>
    <%= k %> <%= v %><br>
  <% end %>
<% end %>
<pre>
  aaa
    indent
  aaa
</pre>
<div>
  hoge
</div>
</body>
</html>
